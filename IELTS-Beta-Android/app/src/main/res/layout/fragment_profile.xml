                    android:textColor="@color/on_bg_light"
                    android:textSize="18sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>

            <!-- Theme -->
            <LinearLayout
