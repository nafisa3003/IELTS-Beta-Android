<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Progress ðŸ“ˆ"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/on_bg_light"
            android:layout_marginBottom="24dp" />

        <!-- Overall Progress Circle -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_overall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:indicatorSize="180dp"
                app:trackThickness="20dp"
                app:trackColor="@color/primary_light"
                app:indicatorColor="@color/primary_light"
                app:showAnimationBehavior="outward"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_overall_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0%"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/on_bg_light"
                android:gravity="center" />
        </FrameLayout>

        <!-- Skill-wise Progress -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skill-wise Progress"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_bg_light"
            android:layout_marginBottom="12dp" />

        <!-- Listening -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ðŸŽ§ Listening"
                android:textSize="14sp"
                android:textColor="@color/on_bg_light" />

            <TextView
                android:id="@+id/tv_listening_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70%"
                android:textSize="14sp"
                android:textColor="@color/on_bg_light" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_listening"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progress="70"
            android:max="100"
            android:progressTint="@color/on_bg_light"
            android:backgroundTint="@color/primary_light"
            android:layout_marginBottom="16dp"
            android:indeterminate="false"
            android:clipToOutline="true" />

        <!-- Reading -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ðŸ“– Reading"
                android:textSize="14sp"
                android:textColor="@color/on_bg_light" />

            <TextView
                android:id="@+id/tv_reading_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textSize="14sp"
                android:textColor="@color/on_bg_light" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_reading"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progress="80"
            android:max="100"
            android:progressTint="@color/on_bg_light"
            android:backgroundTint="@color/primary_light"
            android:layout_marginBottom="16dp"
            android:indeterminate="false"
            android:clipToOutline="true" />

        <!-- Writing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="âœï¸ Writing"
                android:textSize="14sp"
                android:textColor="@color/on_bg_light" />

            <TextView
                android:id="@+id/tv_writing_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textSize="14sp"
                android:textColor="@color/on_bg_light" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_writing"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progress="65"
            android:max="100"
            android:progressTint="@color/on_bg_light"
            android:backgroundTint="@color/primary_light"
            android:layout_marginBottom="16dp"
            android:indeterminate="false"
            android:clipToOutline="true" />

        <!-- Speaking -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ðŸ—£ Speaking"
                android:textSize="14sp"
                android:textColor="@color/on_bg_light" />

            <TextView
                android:id="@+id/tv_speaking_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="14sp"
                android:textColor="@color/on_bg_light" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_speaking"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progress="75"
            android:max="100"
            android:progressTint="@color/on_bg_light"
            android:backgroundTint="@color/primary_light"
            android:layout_marginBottom="16dp"
            android:indeterminate="false"
            android:clipToOutline="true" />

    </LinearLayout>
</ScrollView>